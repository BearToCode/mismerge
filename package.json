{
	"name": "mismerge",
	"type": "module",
	"module": "esnext",
	"repository": {
		"type": "git",
		"url": "https://github.com/BearToCode/mismerge.git"
	},
	"scripts": {
		"preinstall": "npx only-allow pnpm",
		"core": "cd core && npm run dev",
		"demo": "cd demo && npm run dev",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		"check": "npx lerna run check",
		"test": "npx lerna run test",
		"build": "npx lerna run build",
		"prepare": "husky install",
		"publish-demo": "cd demo && npm run gh-pages"
	},
	"devDependencies": {
		"@types/node": "^18.16.3",
		"@typescript-eslint/eslint-plugin": "^5.59.1",
		"@typescript-eslint/parser": "^5.59.1",
		"eslint": "^8.39.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-plugin-svelte": "^2.34.0",
		"husky": "^8.0.3",
		"lerna": "^7.3.0",
		"only-allow": "^1.2.0",
		"prettier": "^2.8.8",
		"prettier-plugin-svelte": "^2.10.0"
	},
	"lint-staged": {
		"*.{js,ts,svelte}": "eslint --cache --fix",
		"*.{js,ts,css,md,svelte,html,yml,json,cjs}": "prettier --write",
		"*.{js,ts}": "eslint --cache --fix",
		"*.{js,ts,css,md}": "prettier --write"
	}
}
