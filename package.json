{
	"name": "mismerge",
	"type": "module",
	"module": "esnext",
	"repository": {
		"type": "git",
		"url": "https://github.com/BearToCode/mismerge.git"
	},
	"scripts": {
		"preinstall": "npx only-allow pnpm",
		"core": "cd packages/mismerge && npm run dev",
		"demo": "cd demo && npm run dev",
		"check": "cd packages/carta-md && npm run check",
		"format": "prettier --plugin-search-dir . --write ."
	},
	"devDependencies": {
		"@types/node": "^18.16.3",
		"@typescript-eslint/eslint-plugin": "^5.59.1",
		"@typescript-eslint/parser": "^5.59.1",
		"eslint": "^8.39.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"prettier": "^2.8.8",
		"prettier-plugin-svelte": "^2.10.0",
		"only-allow": "^1.2.0"
	},
	"lint-staged": {
		"*.{js,ts,svelte}": "eslint --cache --fix",
		"*.{js,ts,css,md,svelte,html,yml,json,cjs}": "prettier --write"
	}
}
